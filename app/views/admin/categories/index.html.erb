<section class="admin-categories-index">
  <header class="page-header">
    <h1 style="text-align: center;">Admin &raquo; All Categories</h1>
  </header>

  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-md-6"> 
        <div class="well text-center mb-3">
          <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
        </div>

        <div class="panel panel-default products">
          <table class="table table-bordered justify-content-center">
            <thead style="text-align: center;">
              <tr>
                <th colspan="2">Category</th>
              </tr>
            </thead>
            <tbody>
              <%= render @categories %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="col-md-6"> <!-- Adjust the column width as needed -->
        <div class="d-flex justify-content-center">
          <%= image_tag 'plante_7.jpg', class: 'img-fluid w-75' %>
        </div>
      </div>
    </div>
  </div>
</section>